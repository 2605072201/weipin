/*  page common css start */
@import "/template/share/share.wxss";

.info-header{
  line-height: 45rpx;
  margin-top:90rpx;
  margin-bottom: 40rpx;
  font-size:32rpx;
  color: #333333;
  text-align: center;
  position: relative;
}
.info-header::before,.info-header::after{
    content:'';
    width:120rpx;
    height: 1px;
    background: #EEEEEE;
    position: absolute;
    top:50%;   
}
.info-header::before{
    left:70rpx;
}
.info-header::after{
   right: 70rpx;
}
/*  page common css end */
.bg-color{
  position: fixed;
  top:0;
  left:0;
  z-index: 0;
  width:100%;
  height: 64px;
  background-color: #5CB3FF;
}
.page-detail{
  min-height: 100%;
  background: #fff;
  padding:30rpx 20rpx 130rpx;
  box-sizing: border-box;
}
.position-base{
  width:710rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 10rpx 0px rgba(211,211,211,0.68);
  border-radius:8rpx;
  margin:0 auto 24rpx;
  padding:30rpx 30rpx;
  box-sizing: border-box;
}
.position-base .position-box{
  padding:0 0rpx 30rpx;

}
.position-base .position-name{
  font-size: 46rpx;
  line-height: 70rpx;
  color: #333333;
  margin-bottom: 10rpx;
}
.position-base .position-salary{
  font-size: 36rpx;
  color: #FF566B;
  line-height: 1.5;
  margin-bottom: 10rpx;
}
.position-base .position-require,.company-box .company-info{
  font-size:28rpx;
  line-height: 40rpx;
  color:#999999;

}
.position-base .position-require .line,.company-box .line{
  display: inline-block;
   width:2rpx;
   height:22rpx;
   margin-left:14rpx;
   margin-right:14rpx;
   background-color:#BBBBBB;
}
.position-base .company-box{
  padding:20rpx 0rpx 0;
  position: relative;
  border-top: 1rpx solid #e5e5e5;
}
.position-base .company-name{
  font-size: 34rpx;
  line-height: 1.5;
  color: #333333;
  margin-bottom:8rpx;
}
.position-base .company-box .fa{
  position: absolute;
  top:54rpx;
  right:15rpx;
  color:#DDDDDD;
  font-size:40rpx;
  font-weight: lighter;
}
/* 第二个块  */
.position-other{
  width:710rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 10px 0px rgba(211,211,211,0.68);
  border-radius:8rpx;
  padding:40rpx 30rpx 54rpx;
  box-sizing: border-box;
}
.position-visitor .visitor-num{
   font-size:24rpx;
   color: #999999;
   text-align: center;
   margin-top:-24rpx;
   margin-bottom: 40rpx;
}
.position-visitor .visitor-portrait{
  display: flex;
}
.position-visitor .visitor-portrait .img-box{
  display: flex;
  flex-direction: column;
  width:80rpx;
  margin-right: 34rpx;
  text-align: center;
}
.position-visitor .visitor-portrait .img{
  width: 78rpx;
  height: 78rpx;
  border-radius: 50%;
  border:2rpx solid #5CB3FF;
  margin-bottom: 28rpx;
}
.position-visitor .visitor-portrait .nick-name{
  font-size:20rpx;
  color: #999999;
}
.position-visitor .visitor-portrait .img-box:last-child{ 
  margin-right: 0;
}
 .position-welfare .tag-list{
  display: flex;
  flex-wrap: wrap;
}
.position-welfare .tag-list .tag{
  height: 48rpx;
  line-height: 48rpx;
  padding:0 16rpx;
  border-radius:8rpx;
  background-color:#49CC93;
  margin-right:14rpx;
  margin-bottom: 24rpx;
  font-size:24rpx;
  color: #ffffff;
} 
.position-desc .content{
  font-size:28rpx;
  color: #666666;
  line-height: 1.7;
}

/* 底部按钮  */
.fixed-btns{
  display: flex;
  position: fixed;
  left:0;
  bottom:0;
  z-index: 1;
  width:100%;
  height: 98rpx;
  background: #fff;
}
.fixed-btns .btn-box{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size:20rpx;
  color: #666666;
}
.fixed-btns .btn-box .img{
  width:34rpx;
  height: 34rpx;
  margin-bottom: 8rpx;
}
.fixed-btns .collect-box{
  width:110rpx;
  border-top:1rpx solid #e5e5e5;
}
.fixed-btns .share-box{
  padding:0;
  margin:0;
  line-height: 1.5;
  background: transparent;
  text-align: left;
  border-radius:0;
  width:140rpx;
  border-top:1rpx solid #e5e5e5;
}
.fixed-btns .share-box::after{
  border:none;
}
.fixed-btns .btn-delivery{
  flex:1;
  background:linear-gradient(-124.8deg,rgba(92,179,255,1),rgba(92,210,255,1));
  font-size:36rpx;
  color: #fff;
}

.no-data{
  padding-top:300rpx;
  font-size: 28rpx;
  color: #999999;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no-data image{
  width:140rpx;
  margin-bottom: 40rpx;
}
.no-data .btn{
  margin-top: 60rpx;
  height:64rpx;
  line-height: 64rpx;
  padding-left:30rpx;
  padding-right: 30rpx;
  background:rgba(92,179,255,1);
  border-radius:8rpx;
  font-size: 30rpx;
  color: #fff;
}
