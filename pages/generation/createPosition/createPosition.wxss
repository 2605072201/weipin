.picker-inner .placeholder{
  font-size:32rpx;
  color: #999999;
 }
 .picker-inner .value{
   color:#222;
   font-size:32rpx
 }
 .picker-inner .place{
   font-size: 32rpx;
 }
 .upper-salary .weui-cells__title .info{
    display:flex;
    align-items:center;
    justify-content:flex-end;

 }
.lower-salary .radio-box{
  width:26rpx;
  height: 26rpx;
  background:rgba(255,255,255,1);
  border-radius: 4rpx; 
  border: 1rpx solid #e5e5e5;
  margin-right:12rpx;
  position: relative;
}
.lower-salary .radio-box .fa{
  color: #5AA2E7;
  position: absolute;
  top:2rpx;
  left:0rpx;
}
 .job-description .weui-cell{
    display: flex;
 }
 .weui-textarea{
   width: 650rpx;
   height: 180rpx;
   overflow: hidden;
   box-sizing: border-box;
   padding:16rpx 0 0 30rpx;
   border: 1rpx solid #EBEEF5;
   border-radius: 8rpx;
 }
 .create-step-one .next-btn{
   margin-top:60rpx;
   margin-bottom:8rpx;
   background: #5CB3FF;
 }
 .job-highlights .weui-cell__bd{
   padding:30rpx 16rpx 0 30rpx;
   background-color: #fff;
 }
.job-highlights .tag-list{
  display: flex;
  flex-wrap: wrap;
  }
.job-highlights .tag-list .tag{
  height: 48rpx;
  line-height: 46rpx;
  padding-left:16rpx;
  padding-right:16rpx;
  margin-bottom: 24rpx;
  margin-right: 14rpx; 
  font-size:24rpx;
  color: #49CC93;
  border-radius: 24rpx;
  border:1rpx solid #49CC93;
}
.job-highlights .tag-list .tag.tag-check{
  background: #49CC93;
  color: #fff;
}

.create-step-two .btn-w690{
  width:622rpx;
  margin-top:60rpx;
  margin-left:auto;
  margin-right:auto;
}
.create-step-two .pre-btn{
  background-color:#FBFAFC!important;
  color:#000;
}
.create-step-two .save-btn{
  margin-top:40rpx;
}
.create-step-one,.create-step-two{
  width: 690rpx;
  margin: 30rpx auto 0;
  background-color: #fff;
  padding:30rpx 30rpx 40rpx;
  box-shadow:0px 2px 10px 0px rgba(0,0,0,0.08);
  border-radius: 8rpx;
  box-sizing: border-box;
}
.position-type-section{
  padding-bottom: 20rpx;
}
.position-type-section .info{
   flex:none;
   position: relative;
   top:-14rpx;
}
.create-step-two .position-type-section .info text{
  display: inline-block;
  width:120rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size:26rpx;
  color: #999999;
  border:1rpx solid rgba(5,5,5,0.1);

}
.position-type-section .info text.active{
    color: #fff;
    background-color: #5CB3FF;
    border:1rpx solid #5CB3FF;
}
.position-type-section .info .full-time{
  border-radius:6rpx 0rpx 0rpx 6rpx;
}
.position-type-section .info .part-time{
  border-radius:0rpx 6rpx 6rpx 0rpx;
}
.weui-cells__title{
  padding: 0;
}
.weui-cell{
  padding: 0;
}
.weui-cells{
  font-size: 32rpx;
}
.upper-salary{
  margin-left:15rpx;
}
.lower-salary{
  margin-right: 15rpx;
}
.radio-box{
  width: 24rpx;
  height: 24rpx;
  vertical-align: top;
  border: 1rpx solid #D0D0D0;
  border-radius: 4rpx;
}
.radio-box icon{
  vertical-align: top;
}
.add-margin{
  padding-bottom: 500rpx;
}