@import '/template/skeleton/skeleton.wxss';

.page-wrap{
  background: #fff;
  padding:100rpx 0  0rpx;
  min-height: 100%; 
}
.position-info{
  padding:30rpx;
  background-color: #fff;
}
.position-base{
  padding-bottom:30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.position-base .base-item{
  line-height: 1.5;
  font-size: 28rpx;
  margin-bottom:10rpx;
}
.position-base .base-item .key{
    color: #B2B2B2;
    margin-right: 30rpx;
}
.position-base .base-item .value{
    color: #333333;
}
.position-highlights .tag-list{
  display: flex;
  flex-wrap: wrap;
  }
.position-highlights .tag-list .tag{
  height: 48rpx;
  line-height: 46rpx;
  padding-left:16rpx;
  padding-right:16rpx;
  margin-bottom: 24rpx;
  margin-right: 14rpx; 
  font-size:24rpx;
  color: #49CC93;
  border-radius: 24rpx;
  border:1rpx solid #49CC93;
}
.position-highlights .weui-cells__title,.position-desc .weui-cells__title{
  padding-left:0;
  margin-bottom: 10rpx;
}
.position-highlights .weui-cells__title{
  margin-bottom: 20rpx;
}
.position-desc .weui-cells__title{
  margin-top:10rpx;
}
.position-desc .desc{
  font-size:28rpx;
  color: #333333;
  line-height: 1.5;
}
.position-detail_hd_bg{
  display: none;
  width: 750rpx;
  height: 100rpx;
  background:linear-gradient(180deg,rgba(92,179,255,1),rgba(92,210,255,1));
  box-shadow:0px 1px 9px 0px rgba(92,179,255,1);
  position: absolute;
  top: 0;
}
.position_info{
  width: 710rpx;
  height: 441rpx;
  position: absolute;
  top: 180rpx;
  left: 20rpx;
  background-color: #fff;
  box-shadow:0px 2rpx 10rpx 0px rgba(211,211,211,0.68);
  border-radius:8px;
  padding: 50rpx 0 0 34rpx;
  box-sizing: border-box;
}
.position_info>view{
  padding-left: 30rpx;
}
.position_name{
  font-size: 46rpx;
  font-weight: 500;
  color: #333333;
  line-height: 70rpx;
}
.position_salary .salary{
  font-size: 36rpx;
  line-height: 71rpx;
  color: #FE8B25;
  margin-right: 30rpx;
}
.position_salary .pople_num{
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
}
.position_tags{
  display: flex;
  justify-content: flex-start;
}
.position_tags .tag{
  padding-right: 12rpx;
  font-size: 28rpx;
  line-height: 22rpx;
  margin:18rpx 0;
  color: #999999;
}
.position_tags .tag + .tag{
  padding-left: 12rpx;
  border-left: 1rpx solid #BBBBBB;
}
.position_company{
  margin-top: 30rpx;
  padding-top: 20rpx;
  width: 610rpx;
  position: relative;
}
.position_company .company_name{
  width:95%;
  font-size: 34rpx;
  color: #333333;
  line-height: 70rpx;
}
.position_company .company_title{
  font-size: 28rpx;
  color: #999999;
  display: flex;
  margin: 18rpx 0;
}
.position_company .company_title text{
  padding-right: 12rpx;
  line-height: 22rpx;
  display: block;
}
.position_company .company_title text+text{
  padding-left: 12rpx;
  border-left: 1rpx solid #BBBBBB;
}
.company_right{
  width: 15rpx;
  height: 15rpx;
  position: absolute;
  top:65rpx;
  right: 0;
}
.company_right::after{
  content: ' ';
  width: 20rpx;
  height: 2rpx;
  background-color: #ddd;
  transform: rotate(-45deg); 
  position: absolute;
  right: 0;
  bottom: 0rpx;
}
.company_right::before{
  content: ' ';
  width: 20rpx;
  height: 2rpx;
  background-color: #ddd;
  transform: rotate(45deg); 
  position: absolute;
  right: 0;
  top: 0rpx;
}
.position_con{
  width: 710rpx;
  margin: 420rpx auto 0;
  background-color: #fff;
  box-shadow:0px 2rpx 10rpx 0px rgba(211,211,211,0.68);
  border-radius:8px;
  padding: 30rpx;
  box-sizing: border-box;
}
.position_item_title{
  font-size: 32rpx;
  color: #333333;
  line-height: 45rpx;
  text-align: center;
  position: relative;
  margin-top:50rpx;
}
.position_item_title::after{
  content: ' ';
  width: 120rpx;
  height: 3rpx;
  background-color: #eee;
  position: absolute;
  top: 20rpx;
  right: 50rpx;
}
.position_item_title::before{
  content: ' ';
  width: 120rpx;
  height: 3rpx;
  background-color: #eee;
  position: absolute;
  top: 20rpx;
  left: 50rpx;
}
.position_item_con{
  margin-top: 50rpx;
}
.position_item_con .tag{
  display: inline-block;
  margin-right: 15rpx;
  background-color: #49CC93;
  color: #fff;
  font-size: 24rpx;
  margin-bottom: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}
.position_item_con.desc{
  color:#666666;
  font-size: 28rpx;
  line-height: 46rpx;
}