page {
  height: -webkit-calc(100% - 64px);
  height: calc(100% - 64px);
}

.page-avatar {
  margin-top: 64px;
  padding: 40rpx 20rpx;
  height: 100%;
  box-sizing: border-box;
}

.avatar-list-wrap {
  width: 710rpx;
  min-height: 100%;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 10rpx 0rpx rgba(211, 211, 211, 0.68);
  border-radius: 8rpx;
  padding: 40rpx 51rpx;
  box-sizing: border-box;
}

.list-hd {
  margin-bottom: 64rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}

.list-hd .text {
  color: #46be8a;
}

.list-bd {
  display: flex;
  flex-wrap: wrap;
}

.list-bd .avatar-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 56rpx;
  margin-right: 52rpx;
  box-sizing: border-box;
  border: 2rpx solid #5cb3ff;
}

.list-bd .avatar-box:nth-child(5n) {
  margin-right: 0;
}

.list-bd .avatar-box .img {
  width: 100%;
  height: 100%;
}
