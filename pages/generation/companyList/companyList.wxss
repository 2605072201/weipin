/* 输入框 */

.banner-box .weui-search-bar {
  position: absolute;
  bottom: -35rpx;
  left: 109rpx;
  width: 532rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  padding: 0;
  border-width: 0;
  overflow: hidden;
}

.weui-search-bar__form {
  width: 584rpx;
  height: 70rpx;
  border: none;
}

.weui-search-bar__label {
  line-height: 70rpx;
}

.weui-search-bar__label .weui-icon-search {
  vertical-align: top;
}

.weui-search-bar__label .weui-search-bar__text {
  position: relative;
  top: -2rpx;
}

.weui-search-bar__box {
  height: inherit;
  line-height: inherit;
}

.weui-icon-search_in-box {
  top: 23rpx;
}

.weui-search-bar__input {
  height: inherit;
  line-height: inherit;
  width: 300rpx;
}

.weui-icon-clear {
  padding: 22rpx;
}

.weui-search-bar__cancel-btn {
  font-size: 28rpx;
  line-height: 80rpx;
  margin-left: 0rpx;
  padding-left: 15rpx;
  margin-right: 15rpx;
  position: relative;
}

.weui-search-bar__cancel-btn::before {
  content: " ";
  position: absolute;
  left: 0;
  top: 20rpx;
  bottom: 20rpx;
  width: 1rpx;
  border-left: 2rpx solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

/*  筛选过滤 */
.company-list-wrap{
  position: relative;
}
.company-list-wrap .mask{
  width:100%;
  position: fixed;
  top:489rpx;
  bottom:0;
  z-index: 1;
  background: rgba(0, 0, 0, 0.4);
}
.filter-tabs {
  display: flex;
  padding: 16rpx 0;
  background-color: #fff;
  position: relative;
}

.filter-tabs .tab {
  flex: 1;
  box-sizing: border-box;
  height: 57rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #333333;
}

.filter-tabs .tab:first-child {
  border-right: 1rpx solid rgba(235, 238, 245, 1);
}

.filter-tabs .tab .arrow {
  width: 6px;
  height: 6px;
  border-right: 2px solid #c7c7cc;
  border-bottom: 2px solid #c7c7cc;
  transform: rotate(45deg);
  margin-left: 16rpx;
  position: relative;
  top: -1px;
}

.filter-tabs .tab.active .arrow {
  transform: rotate(225deg);
  top:1px;
}

.filter-content {
  position: absolute;
  left: 0;
  top: 100%;
  z-index: 2;
  box-shadow: 0px 0px 8rpx 0px rgba(0, 0, 0, 0.1) inset;
  background-color: #fff;
  height: 0;
  transition: height 0.3s ease;
  overflow: hidden;
}

.filter-content.open {
  height: 314rpx;
}

.filter-content.open .btns {
  display: flex;
}

.filter-content.open2 {
  height: 628rpx;
}

.filter-content.open2 .btns {
  display: flex;
}

.scale-list {
  padding: 40rpx 30rpx 8rpx;
  display: flex;
  flex-wrap: wrap;
  max-height: 500rpx;
}
.industry-list{
  padding-bottom: 40rpx;
}
.scale-list .filter-item {
