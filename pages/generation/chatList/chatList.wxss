
.page-message {
  margin-top: 64px;
  min-height: 100%;
}

.msg-list {
  padding-top: 30rpx;
}

.msg-item {
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ebeef5;
  display: flex;
}

.msg-item:last-child {
  border-bottom: none;
}

.msg-item .img-box {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  align-self: center;
}

.msg-item .img-box .img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.msg-item .content {
  flex: 1;
}

.msg-item .content-base {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.msg-item .content-base .dot {
  width: 20rpx;
  height: 20rpx;
  background: rgba(255, 59, 48, 1);
  border-radius: 50%;
  margin-right: 16rpx;
  display: inline-block;
  position:relative;
  top:-4rpx;
  
}

.msg-item .content-base .name {
  font-size: 32rpx;
  color: #333333;
}

.msg-item .content-base .time {
  font-size: 28rpx;
  color: #999999;
}

.msg-item .content-msg {
  width:560rpx;
  font-size: 28rpx;
  color: #666666;
}

.no-data{
  padding-top:300rpx;
  font-size: 28rpx;
  color: #999999;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no-data image{
  width:320rpx;
  margin-bottom: 78rpx;
}
