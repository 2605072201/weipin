  color: #999999;
} 
.btn-disabled{
  background:rgba(90,162,231,1)!important;
  opacity:0.4;
  color: #fff!important;
}
/* 去掉button默认样式 */
.remove-button-default-style{
    padding:0;
    margin:0;
    line-height: 1.5;
    background: transparent;
    text-align: left;
    border-radius:0;
}
.remove-button-default-style::after{
