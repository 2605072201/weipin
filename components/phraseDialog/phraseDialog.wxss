
.show-btn {

  margin-top: 100rpx;

  color: #22cc22;

}

.modal-mask {

  width: 100%;

  height: 100%;

  position: fixed;

  top: 0;

  left: 0;

  background: #000;

  opacity: 0.5;

  overflow: hidden;

  z-index: 9000;

  color: #fff;

}

.modal-dialog {

  width: 560rpx;

  overflow: hidden;

  position: fixed;

  top: 50%;

  left: 0;

  z-index: 9999;

  background: #fff;

  margin: -250rpx 105rpx;

  border-radius: 12rpx;

}

.modal-title {
  position: relative;
  padding-top: 50rpx;

  font-size: 36rpx;

  color: #030303;

  text-align: center;

}
.modal-title .icon-close{
  position: absolute;
  top:20rpx;
  right: 20rpx;
  width:28rpx;
  height:28rpx;
}

.modal-content {

  padding: 18rpx 32rpx;

}

.modal-input {

  display: flex;
  height: 166rpx;
  background: rgba(249,249,249,1);

  border: 1rpx solid #ddd;

  border-radius: 8rpx;

  font-size: 28rpx;

}

.textarea {

  width: 100%;

  height: 166rpx;

  font-size: 30rpx;

  line-height: 40rpx;

  padding:10rpx 20rpx;

  box-sizing: border-box;

  color: #333333;
  /* overflow-y: scroll; */

}

.input-holder {

  color: #999999;

  font-size: 30rpx;

}

.modal-footer {

  display: flex;

  flex-direction: row;

  height: 86rpx;

  border-top: 1rpx solid #dedede;

  font-size: 34rpx;

  line-height: 86rpx;

}

.btn-cancel {

  width: 50%;

  color: #000;

  text-align: center;

  border-right: 1rpx solid #dedede;

}

.btn-confirm {

  width: 50%;

  color: #1AAD19;

  text-align: center;

}
.word-num{
  margin-top:14rpx;
  margin-bottom: 6rpx;
  text-align: right;
  font-size:24rpx;
  color: #999999;
}